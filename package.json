{
  "name": "linter-codeclimate",
  "main": "./lib/index.js",
  "version": "0.2.5",
  "description": "An Atom Linter plugin for the Code Climate CLI",
  "repository": "https://github.com/AtomLinter/linter-codeclimate",
  "license": "MIT",
  "engines": {
    "atom": ">=1.7.0 <2.0.0"
  },
  "configSchema": {
    "executablePath": {
      "type": "string",
      "default": "codeclimate",
      "description": "The full path to the `codeclimate` executable.",
      "title": "Executable path"
    },
    "init": {
      "type": "boolean",
      "default": false,
      "description": "Create a `.codeclimate.yml` file at the project root if not found.",
      "title": "Generate initial configuration if not present"
    },
    "disableTimeout": {
      "type": "boolean",
      "default": false,
      "description": "Disable the 10 second execution timeout.",
      "title": "Disable timeout"
    }
  },
  "dependencies": {
    "atom-linter": "^10.0.0",
    "atom-package-deps": "^4.6.0"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "package-deps": [
    "linter:2.0.0"
  ],
  "devDependencies": {
    "eslint": "^4.6.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "jasmine-fix": "^1.3.1"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "apm test"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true,
      "browser": true
    }
  }
}
