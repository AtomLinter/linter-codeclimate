{
  "name": "linter-codeclimate",
  "main": "./lib/index.js",
  "version": "0.2.2",
  "description": "An Atom Linter plugin for the Code Climate CLI",
  "repository": "https://github.com/AtomLinter/linter-codeclimate",
  "license": "MIT",
  "engines": {
    "atom": ">=1.4.0 <2.0.0"
  },
  "configSchema": {
    "executablePath": {
      "type": "string",
      "default": "codeclimate"
    }
  },
  "dependencies": {
    "atom-linter": "^9.0.0",
    "js-yaml": "^3.5.3",
    "fs-plus": "^2.8.2"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "devDependencies": {
    "eslint": "^3.10.2",
    "eslint-config-airbnb-base": "^10.0.1",
    "eslint-plugin-import": "^2.2.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true,
      "browser": true
    }
  }
}
